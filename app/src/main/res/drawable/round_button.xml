<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="@android:color/background_light"/>
            <stroke android:width="2px" android:color="@android:color/background_dark"/>
            <padding android:bottom="5px" android:left="5px" android:top="5px" android:right="5px"/>
            <size android:height="20px" android:width="20px"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@android:color/background_dark"/>
            <stroke android:width="2px" android:color="@android:color/background_dark"/>
            <padding android:bottom="5px" android:left="5px" android:top="5px" android:right="5px"/>
            <size android:height="20px" android:width="20px"/>
        </shape>
    </item>
</selector>